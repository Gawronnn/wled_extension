{
  "manifest_version": 3,
  "name": "LED Plugin",
  "version": "1.0",
  "description": "Włączanie LED za pomocą API WLED",
  "host_permissions": [
    "http://ledy.local/*",
    "file:///*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icon.png"
    }
  },
  "icons": {
    "512": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-modals"
  }
}
